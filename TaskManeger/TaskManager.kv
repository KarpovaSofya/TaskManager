	Button:
		text: 'Change'
		size_hint: None, None
		disabled: True
		pos_hint :{'x':.1, 'y':.1}
		height : '40dp'
		width : '300dp'
		on_press : root.change_task(name.text,date.text)

	Button:
		id: delete_btn
		text: 'Delete'
		disabled: True
		size_hint: None, None
		pos_hint :{'x':.5, 'y':.1}
		height : '40dp'
		width : '300dp'
		on_press : root.delete_task(name.text,date.text)

