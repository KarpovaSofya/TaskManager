<MainScreen>:
	Label:
		text : "Welcome to Task Manager"
		size_hint : .6, .1
		pos_hint :{'x':.2, 'y':.80}
		font_size : 30

	Button:
		text: 'Show Tasks'
		size_hint: None, None
		pos_hint :{'x':.3, 'y':.65}
		height : '60dp'
		width : '300dp'
		on_press : root.go2chooseBScreen()

	Button:
		text: 'Add new task'
		size_hint: None, None
		pos_hint :{'x':.3, 'y':.55}
		height : '60dp'
		width : '300dp'
		on_press : root.go2addScreen()

	Button:
		text: 'Find task'
		size_hint: None, None
		pos_hint :{'x':.3, 'y':.45}
		height : '60dp'
		width : '300dp'
		on_press : root.go2showTaskScreen()


	Button:
		background_color: .6, .0, .0, 1
		text: 'Quit'
		size_hint: None, None
		pos_hint :{'x':.3, 'y':.10}
		height : '40dp'
		width : '300dp'
		on_press : root.quit_press()


<ShowScreen>:
	RstDocument:
