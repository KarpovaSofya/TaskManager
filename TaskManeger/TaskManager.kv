<AddScreen>:

	Label:
		id: ld1
		text : "Add a task"
		size_hint: .6, .1
		pos_hint :{'x':.2, 'y':.9}
		font_size : 20
	Label:
		id: name_lb
		text : "Name:"
		size_hint: .3, .1
		pos_hint :{'x':.0, 'y':.8}
		font_size : 20

	TextInput:
		id: name
		size_hint: .6, .1
		pos_hint :{'x':.3, 'y':.8}

	Label:
		id: description_lb
		text : "Description:"
		size_hint: .3, .1
		pos_hint :{'x':.0, 'y':.7}
		font_size : 20

	TextInput:
		id: description
		size_hint: .6, .1
		pos_hint :{'x':.3, 'y':.7}

	Label:
		id: date_lb
		text : "Date:"
		size_hint: .3, .1
		pos_hint :{'x':.0, 'y':.6}
		font_size : 20

	TextInput:
		id: date
		size_hint: .3, .1
		pos_hint :{'x':.3, 'y':.6}

	Button:
		id: today
		text: 'Today'
		size_hint: .3, .05
		pos_hint :{'x':.6, 'y':.65}
		on_press: root.today()

	Button:
		id: tomorrow
		text: 'Tomorrow'
		size_hint: .3, .05
		pos_hint :{'x':.6, 'y':.6}
		on_press: root.tomorrow()

	Label:
		id: time_lb
		text : "Time:"
		size_hint: .3, .1
		pos_hint :{'x':.0, 'y':.5}
		font_size : 20

	TextInput:
		id: time
		size_hint: .6, .1
		pos_hint :{'x':.3, 'y':.5}

	Label:
		id: groups_lb
		text : "Group:"
		size_hint: .3, .1
		pos_hint :{'x':.0, 'y':.4}
		font_size : 20

	TextInput:
		id: groups
		text : ""
		size_hint: .6, .1
		pos_hint :{'x':.3, 'y':.4}
		font_size : 20

	Button:
		text: 'Add'
		size_hint: None, None
		pos_hint :{'x':.3, 'y':.25}
		height : '40dp'
		width : '300dp'
		on_press : root.add_new_task(name.text,description.text,date.text,time.text,groups.text)

	Button:
		background_color: .6, .0, .0, 1
		text: 'Go to main screen'
		size_hint: None, None
		pos_hint :{'x':.3, 'y':.15}
		height : '40dp'
		width : '300dp'
		on_press : root.go2mainScreen()

<ShowTaskScreen>:

	Label:
		id: name_lb
		text : "Input task name:"
